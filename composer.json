{
    "name": "wyrihaximus/composer-update-bin-autoload-path",
    "type": "composer-plugin",
    "description": "\ud83c\udff0 Composer plugin that updates the autoload path of bin file",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "composer-plugin-api": "^1.1"
    },
    "require-dev": {
        "wyrihaximus/test-utilities": "^2.2"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "class": "WyriHaximus\\Composer\\BinAutoloadPathUpdater"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\Composer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\Composer\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ],
        "pre-autoload-dump": [
            "WyriHaximus\\Composer\\BinAutoloadPathUpdater::updateBinPaths"
        ]
    }
}
